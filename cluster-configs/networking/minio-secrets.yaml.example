# MinIO credentials - copy to minio-secrets.yaml and update values
---
apiVersion: v1
kind: Secret
metadata:
  name: minio-credentials
  namespace: minio
type: Opaque
stringData:
  MINIO_ROOT_USER: "minio-admin"
  MINIO_ROOT_PASSWORD: "CHANGE_ME_TO_A_STRONG_PASSWORD"
---
# Loki needs these credentials to access MinIO
# This secret is used by LokiStack in the netobserv namespace
apiVersion: v1
kind: Secret
metadata:
  name: loki-minio-credentials
  namespace: netobserv
type: Opaque
stringData:
  access_key_id: "minio-admin"
  access_key_secret: "CHANGE_ME_TO_A_STRONG_PASSWORD"
  bucketnames: "netobserv-loki"
  endpoint: "http://minio.minio.svc.cluster.local:9000"
