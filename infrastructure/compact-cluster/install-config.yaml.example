apiVersion: v1
metadata:
  name: my-cluster        # Your cluster name
baseDomain: example.com   # Your base domain

# Compact 3-node cluster - all nodes are masters
controlPlane:
  name: master
  replicas: 3

compute:
  - name: worker
    replicas: 0  # No dedicated workers in compact cluster

networking:
  networkType: OVNKubernetes
  clusterNetwork:
    - cidr: 10.128.0.0/14
      hostPrefix: 23
  serviceNetwork:
    - 172.30.0.0/16
  machineNetwork:
    - cidr: 192.168.1.0/24  # Your network CIDR

platform:
  none: {}

# Pull secret from https://console.redhat.com/openshift/install/pull-secret
# Paste your pull secret as a single-line JSON string
pullSecret: '{"auths":{"cloud.openshift.com":{"auth":"..."},"quay.io":{"auth":"..."},"registry.connect.redhat.com":{"auth":"..."},"registry.redhat.io":{"auth":"..."}}}'

# SSH public key for node access
# Run: cat ~/.ssh/id_rsa.pub
sshKey: 'ssh-rsa AAAA... your-username'
